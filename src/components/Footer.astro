---
import LogoFestival from "../assets/logo-festival_cinemagny.svg";
import Facebook from "../assets/IconFacebook.svg?raw";
import Instagram from "../assets/IconInstagram.svg?raw";
import Twitter from "../assets/IconTwitter.svg?raw";
---

<footer
    class="container space-y-10 pt-20 lg:grid lg:grid-cols-3 lg:gap-8 lg:space-y-0 bg-primary text-white px-8 py-12"
>
    <div class="flex flex-col items-center space-y-4">
        <a href="/">
            <img
                src={LogoFestival.src}
                alt="Logo Festival Cinémagny"
                class="h-16 w-auto"
            />
        </a>
        <p class="text-center text-sm">
            Le rendez-vous incontournable du cinéma indépendant
        </p>
    </div>

    <nav class="grid grid-cols-2 gap-8 text-sm">
        <div>
            <h4 class="uppercase font-semibold">Festival</h4>
            <ul class="text-gray-300 space-y-2">
                <li>
                    <a href="/festival" class="hover:text-secondary"
                        >À propos</a>
                </li>
                <li>
                    <a href="/programme" class="hover:text-secondary"
                        >Programme</a>
                </li>
                <li>
                    <a href="/invites" class="hover:text-secondary">Invités</a>
                </li>
            </ul>
        </div>

        <div>
            <h4 class="uppercase font-semibold">Infos Pratiques</h4>
            <ul class="text-gray-300 space-y-2">
                <li>
                    <a href="/infos-pratiques" class="hover:text-secondary"
                        >Accès & Transport</a>
                </li>
                <li>
                    <a href="/hebergement" class="hover:text-secondary"
                        >Hébergement</a>
                </li>
                <li><a href="/faq" class="hover:text-secondary">FAQ</a></li>
            </ul>
        </div>
    </nav>

    <div class="flex flex-col items-center space-y-6 text-center">
        <p class="text-gray-300 text-sm">
            ©2025 Festival Cinémagny. Tous droits réservés
        </p>
        <ul class="flex gap-6">
            <li>
                <a href="https://facebook.com" aria-label="Facebook">
                    <span set:html={Facebook} />
                </a>
            </li>
            <li>
                <a href="https://instagram.com" aria-label="Instagram">
                    <span set:html={Instagram} />
                </a>
            </li>
            <li>
                <a href="https://twitter.com" aria-label="Twitter">
                    <span set:html={Twitter} />
                </a>
            </li>
        </ul>
    </div>
</footer>
